{
    "name": "watch",
    "title": "文件",
    "desc": "观察文件夹是否变化",
    "main": "index.js",
    "inputs": [
        {
            "key": "files",
            "title": "文件列表",
            "type": "array",
            "desc": "监控的文件列表",
            "define": {
                "type": "file"
            }
        },
        {
            "key": "folders",
            "title": "文件夹",
            "type": "array",
            "desc": "监控的文件夹列表",
            "define": {
                "type": "folder"
            }
        },
        {
            "key": "events",
            "title": "事件",
            "type": "array",
            "desc": "监控的事件",
            "define": {
                "type": "select",
                "options": [
                    {
                        "key": "add",
                        "title": "文件新增",
                        "val": "add"
                    },
                    {
                        "key": "change",
                        "title": "修改",
                        "val": "change"
                    },
                    {
                        "key": "unlink",
                        "title": "文件删除",
                        "val": "unlink"
                    },
                    {
                        "key": "addDir",
                        "title": "文件夹新增",
                        "val": "addDir"
                    },
                    {
                        "key": "unlinkDir",
                        "title": "文件夹删除",
                        "val": "unlinkDir"
                    },
                    {
                        "key": "all",
                        "title": "所有",
                        "val": "all"
                    }
                ]
            }
        }
    ]
}